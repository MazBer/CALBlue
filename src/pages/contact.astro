---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact | CALBlue" description="Contact the CALBlue team.">
  <section class="w-full max-w-5xl mx-auto px-4 md:px-10 py-12 md:py-16">
    <h1 class="text-[#0a2a4d] dark:text-white text-4xl md:text-5xl font-display font-black tracking-tight">Contact</h1>

    <div class="mt-8 grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div class="bg-white dark:bg-[#1a2c38] rounded-3xl p-8 border border-gray-200 dark:border-white/10 shadow-sm">
        <h2 class="font-display font-black text-2xl">Get in touch</h2>
        <p class="mt-3 text-gray-600 dark:text-gray-300 font-medium">
          Add your project email / Instagram here. For now, you can use a mailto link.
        </p>

        <div class="mt-6 flex flex-col gap-3">
          <a class="text-primary font-bold inline-flex items-center gap-2" href="mailto:calblue@example.com">
            <span class="material-symbols-outlined">mail</span> calblue@example.com
          </a>
          <p class="text-gray-600 dark:text-gray-300 font-medium inline-flex items-center gap-2">
            <span class="material-symbols-outlined">location_on</span> Cağaloğlu Anadolu Lisesi
          </p>
        </div>
      </div>

      <form
        class="bg-white dark:bg-[#1a2c38] rounded-3xl p-8 border border-gray-200 dark:border-white/10 shadow-sm"
        action="mailto:calblue@example.com"
        method="post"
        enctype="text/plain"
      >
        <h2 class="font-display font-black text-2xl">Message</h2>

        <div class="mt-6 flex flex-col gap-4">
          <label class="text-sm font-bold text-gray-700 dark:text-gray-200">
            Name
            <input class="mt-2 w-full rounded-xl" name="name" required />
          </label>

          <label class="text-sm font-bold text-gray-700 dark:text-gray-200">
            Email
            <input class="mt-2 w-full rounded-xl" name="email" type="email" required />
          </label>

          <label class="text-sm font-bold text-gray-700 dark:text-gray-200">
            Message
            <textarea class="mt-2 w-full rounded-xl" name="message" rows="5" required></textarea>
          </label>

          <button
            class="bg-primary hover:bg-blue-600 text-white font-display font-bold py-3 px-4 rounded-xl text-sm transition-colors"
            type="submit"
          >
            Send
          </button>
        </div>
      </form>
    </div>
  </section>
</BaseLayout>
